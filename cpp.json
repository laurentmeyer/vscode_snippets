{
	"Class HPP": {
		"prefix": "class_hpp",
		"body": [
			"#ifndef ${TM_FILENAME/(.*)\\.hpp$/${1:/upcase}/}_HPP",
			"# define ${TM_FILENAME/(.*)\\.hpp$/${1:/upcase}/}_HPP",
			"",
			"# include <iostream>",
			"",
			"class ${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/} {",
			"",
			"public: ",
			"",
			"\t${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}(void); ",
			"\t${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}(${1:/capitalize} const & src);/} ",
			"\t~${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}(void); ",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/\t${1:/capitalize} &\t\toperator=(${1:/capitalize} const & rhs);/}",
			"",
			"\tstd::string const\ttoString(void) const;",
			"",
			"",
			"private:",
			"",
			"};",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/std::ostream &\toperator<< (std::ostream & o, ${1:/capitalize} const & rhs);/}",
			"",
			"#endif",
			"",
			"",
			"#include \"${TM_FILENAME/(.*)\\.hpp$/${1:/capitalize}/}.hpp\"",
			"#include <iostream>",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}::${1:/capitalize}/}(void)",
			"{",
			"    return;",
			"}",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}::${1:/capitalize}(${1:/capitalize} const & src)/} ",
			"{",
			"\t//Do whatever needs to be done",
			"\t*this = src;",
			"\treturn;",
			"}",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}::~${1:/capitalize}/}(void)",
			"{",
			"\treturn;",
			"}",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize} &\t${1:/capitalize}::operator=(${1:/capitalize} const & rhs)/}",
			"{",
			"\t//Do whatever needs to be done",
			"\treturn *this;",
			"}",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/std::string const ${1:/capitalize}::toString(void) const/}",
			"{",
			"\t// Return whatever needs to be returned",
			"}",
			"",
			"${TM_FILENAME/(.*)Class\\.hpp$/std::ostream &\toperator<< (std::ostream & o, ${1:/capitalize} const & rhs)/}",
			"{",
			"\to << rhs.toString();",
			"\treturn o;",
			"}"
		],
		"description": "Create the Class HPP file template"
	},
	"Getter Setter Value": {
		"prefix": "get_set_value",
		"body": [
			"\t${1:type}\tget${3:Name}(void) const;",
			"\tvoid\tset${3:Name}(${1:type} ${2:name});",
			"",
			"\t${1:type}\t_${2:name};",
			"",
			"${1:type}\t${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}::get${3:Name} (void) const { return (this->_${2:name}); }",
			"void\t${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}::set${3:Name} (${1:type} ${2:name}) { this->_${2:name} = ${2:name}; }"
		],
		"description": "Declares and defines a private variable with getter and setter"
	},
	"Getter Setter Reference": {
		"prefix": "get_set_reference",
		"body": [
			"\t${1:type}\t&get${3:Name}(void) const;",
			"\tvoid\tset${3:Name}(${1:type} ${2:name});",
			"",
			"\t${1:type}\t_${2:name};",
			"",
			"${1:type}\t&${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}::get${3:Name} (void) { return (this->_${2:name}); }",
			"void\t${TM_FILENAME/(.*)Class\\.hpp$/${1:/capitalize}/}::set${3:Name} (${1:type} ${2:name}) { this->_${2:name} = ${2:name}; }"
		],
		"description": "Declares and defines a private variable with getter and setter"
	}
}